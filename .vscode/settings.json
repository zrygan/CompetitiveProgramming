{
  "workbench.sideBar.location": "right",
  "editor.minimap.autohide": true,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,

  // If a file is hidden and you wanna touch it, comment it out
  // here
  "files.exclude": {
    ".gitignore":   true, // gitignore
    // "*.ps1":        true, // Powershell scripts
    "README.md":    true, // README
    // "solutions/":   true, // The solutions folder
    "**/.git":      true,
    "**/.svn":      true,
    "**/.hg":       true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },

  // EDITOR SETTINGS
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  
  // TERMINAL SETTINGS
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.profiles.windows": {
    "Visual Studio": {
      "path": "powershell.exe",
      "args": [
        "-NoExit",
        "-Command",
        "&{Import-Module 'C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\Common7\\Tools\\Microsoft.VisualStudio.DevShell.dll'; Enter-VsDevShell 923fee0b -SkipAutomaticLocation -DevCmdArguments '-arch=x64 -host_arch=x64'}"
      ],
      "icon": "terminal-powershell"
    }
  },
  "terminal.integrated.defaultProfile.windows": "Visual Studio"
}